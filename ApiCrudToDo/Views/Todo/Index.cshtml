@model IEnumerable<ApiCrudToDo.Models.TodoModel>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col-2">
        <form  asp-action="create" asp-controller="Todo">
            <div class="input-group">

            <input  type="number"  ="userid" value="" placeholder="userid"/>
                <textarea type="text" name="todo" value="" placeholder="todo"></textarea>

                <label>completed?</label>
            <input type="checkbox" name="completed" value="" placeholder="completed"/>
            </div>
        <button class="btn btn-success" type="submit" value="create new" style="width:200px;height:100px" />
        </form>
    </div>

    <div class="col-6" id="postList">
        @foreach(var todo in Model)
        {
            <div>ID:@todo.id</div>
            <div>UserID:@todo.userId</div>
            <div>TODO: @todo.todo</div>
            <div>Completed:@todo.completed</div>
        }
    </div>
</div>